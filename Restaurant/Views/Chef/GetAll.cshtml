@using Restaurnat.BLL.ModelVM.Chef
@model List<GetChefVM>

@{
    ViewData["Title"] = "All Chefs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Chefs List</h2>
    <a asp-controller="Chef" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Chef
    </a>
</div>

<table class="table table-bordered table-hover align-middle text-center">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Age</th>
            <th>About</th>
            <th>Restaurant</th>
            <th>Category</th>
            <th>Experience</th>
            <th>Working Now</th>
            <th>Created On</th>
            <th>Modified On</th>
            <th>Deleted On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var chef in Model)
            {
                        <tr>
                            <td>
                        @if (!string.IsNullOrEmpty(chef.imagepath))
                        {
                                                    <img src="~/Files/@chef.imagepath" alt="Chef Image" style="width:70px; height:70px; object-fit:cover; border-radius:50%;" />
                        }
                        else
                        {
                                        <span class="text-muted">No Image</span>
                        }
                            </td>
                            <td>@chef.name</td>
                            <td>@chef.age</td>
                            <td>@chef.about</td>
                            <td>@chef.restaurant_id</td>
                            <td>@chef.category</td>
                            <td>@chef.experience_years yrs</td>
                            <td>
                        @if (chef.work_now)
                        {
                                        <span class="badge bg-success">Yes</span>
                        }
                        else
                        {
                                        <span class="badge bg-danger">No</span>
                        }
                            </td>
                            <td>@chef.CreatedOn.ToString("yyyy-MM-dd")</td>
                            <td>@(chef.ModifiedOn?.ToString("yyyy-MM-dd") ?? "-")</td>
                            <td>@(chef.DeletedOn?.ToString("yyyy-MM-dd") ?? "-")</td>
                            <td>
                                @* <a asp-controller="Chef" asp-action="Details" asp-route-id="@chef.chef_id" class="btn btn-sm btn-info me-1">Details</a> *@
                                <a asp-controller="Chef" asp-action="Edit" asp-route-id="@chef.chef_id" class="btn btn-sm btn-warning me-1">Edit</a>
                                <a asp-controller="Chef" asp-action="Delete" asp-route-id="@chef.chef_id" class="btn btn-sm btn-danger">Delete</a>

                            </td>
                        </tr>
            }
        }
        else
        {
                <tr>
                    <td colspan="9" class="text-center text-muted">No chefs found.</td>
                </tr>
        }
    </tbody>
</table>
